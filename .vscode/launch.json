    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "preLaunchTask": "rust: cargo build",
            "program": "${workspaceRoot}/target/debug/physarum.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'physarum'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=physarum",
                    "--package=physarum"
                ],
                "filter": {
                    "name": "physarum",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'physarum'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=physarum",
                    "--package=physarum"
                ],
                "filter": {
                    "name": "physarum",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}